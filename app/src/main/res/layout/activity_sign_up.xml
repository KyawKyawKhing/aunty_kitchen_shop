<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.aceplus.hackthon.login.LoginActivity">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="@color/colorWhite" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_AppLogo"
        android:layout_below="@+id/imgBack"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txtRegister"
        android:layout_below="@+id/img_AppLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25sp"
        android:text="REGISTER"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_below="@+id/txtRegister"
        android:textSize="16sp"
        android:id="@+id/edt_signUpEmail"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@drawable/edit_text_border_white_line"
        android:paddingLeft="20dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ace_mail"/>
    </LinearLayout>
    <EditText
        android:layout_below="@+id/edt_signUpEmail"
        android:textSize="16sp"
        android:id="@+id/edt_signUpPassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_border_white_line"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite" />

    <Spinner
        android:layout_below="@+id/edt_signUpPassword"
        android:isScrollContainer="true"
        android:textSize="16sp"
        android:id="@+id/sp_department"
        android:paddingLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_border_white_line"
        android:textColor="@color/colorWhite"/>



    <TextView
        android:layout_below="@+id/sp_department"
        android:id="@+id/btn_signUp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/sign_in_rectangle"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>

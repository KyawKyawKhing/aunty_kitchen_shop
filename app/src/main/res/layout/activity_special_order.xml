<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical"
    tools:context=".special_order.SpecialOrderActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/special_order"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sp_menuItem"
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border_white_full"
            android:paddingLeft="20dp"
            android:textSize="16sp" />


        <Spinner
            android:id="@+id/sp_amount"
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_border_white_full"
            android:paddingLeft="20dp"
            android:textSize="16sp" />

        <EditText
            android:hint="Remark"
            android:textColorHint="@color/colorBlack"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:id="@+id/txtDescription"
            android:layout_below="@+id/txtRemark"
            android:background="@drawable/edit_text_border_white_full"
            android:layout_marginTop="20dp"
            android:gravity="top|left"
            android:textSize="14sp"
            android:layout_width="340dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/btn_signUp"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sign_in_rectangle"
            android:gravity="center"
            android:text="@string/Order"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="8dp"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/img_close"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:id="@+id/menuItem_layout"
        android:layout_below="@+id/img_close"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_item_name"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mote Hin Kar" />


        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMinus"
                android:layout_width="20dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_height="20dp"
                android:background="@color/colorGrey"
                android:text="-"/>

            <TextView
                android:id="@+id/txt_itemAmount"
                android:layout_width="25dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                tools:text="1"/>

            <TextView
                android:id="@+id/txtPlus"
                android:layout_width="25dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@color/colorGreen"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtRemark"
        android:layout_below="@+id/menuItem_layout"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:text="Remark"/>

    <EditText
        android:id="@+id/txtDescription"
        android:layout_below="@+id/txtRemark"
        android:background="@drawable/edit_text_border_line"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:gravity="top|left"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <Button
        android:layout_below="@+id/txtDescription"
        android:id="@+id/btn_confirm"
        android:layout_marginTop="5dp"
        android:text="Confirm"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
